<%= form_with model: product, local: true do |form| %>
    <div class="container d-flex justify-content-center align-items-center vh-100">
      <div class="form-box">
        <h2 class="mb-4 text-center">Thêm Sản Phẩm Mới</h2>
        
        <div class="form-group">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control form-control-lg' %>
        </div>
  
        <div class="form-group">
          <%= form.label :description, class: 'form-label' %>
          <%= form.rich_text_area :description, class: 'form-control form-control-lg description-area', rows: 10 %>
        </div>
        
        <div class="form-group">
          <%= form.label :featured_image, class: 'form-label' %>
          <%= form.file_field :featured_image, accept: "image/*", class: 'form-control-file' %>
        </div>

        <div>
          <%= form.label :inventory_count, style: "display: block" %>
          <%= form.number_field :inventory_count %>
        </div>
        
        <div class="form-group text-right"> <!-- Căn phải cho nút -->
          <%= form.submit 'Lưu', class: 'btn btn-success btn-lg' %>
          <%= link_to 'Hủy', products_path, class: 'btn btn-danger btn-lg ml-2' %>
        </div>
      </div>
    </div>
  <% end %>